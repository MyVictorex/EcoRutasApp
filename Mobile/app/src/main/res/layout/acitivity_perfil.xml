<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8E6A3"
    tools:context=".ui.PerfilActivity">

    <!-- 游댳 Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        app:title="Mi Perfil"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 游댳 Vista de datos -->
    <LinearLayout
        android:id="@+id/layoutDatos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_person"
            android:backgroundTint="#FFFFFF"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ecorutas.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:textColor="@android:color/white"
                android:backgroundTint="#2E7D32"
                app:cornerRadius="25dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesi칩n"
                android:textColor="@android:color/white"
                android:backgroundTint="#C62828"
                app:cornerRadius="25dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 游댳 Edici칩n del perfil -->
    <ScrollView
        android:id="@+id/layoutEdicion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbarPerfil"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/etNombrePerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="40dp"
                android:hint="Nombre"
                android:backgroundTint="#D3D3D3"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etApellidoPerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="40dp"
                android:hint="Apellido"
                android:backgroundTint="#D3D3D3"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etCorreoPerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="40dp"
                android:hint="Correo electr칩nico"
                android:inputType="textEmailAddress"
                android:backgroundTint="#D3D3D3"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="12dp" />

            <EditText
                android:id="@+id/etContrasenaPerfil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="40dp"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:backgroundTint="#D3D3D3"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:padding="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarCambios"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2E7D32"
                    app:cornerRadius="25dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelarEdicion"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#C62828"
                    app:cornerRadius="25dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
